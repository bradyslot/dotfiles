#!/bin/sh

xsettingsd &
xrandr -r 75 &
xcalib ~/.config/xcalib/q3279vwf.icm &
xset s off -dpms 2> /dev/null &
xset r rate 350 40 &
xmodmap -e 'clear Lock' -e 'keycode 0x42 = Escape' &
numlockx &
xrdb ~/.config/X11/Xresources &
dwmblocks &
picom --no-fading-openclose -m 1.0 &
sxhkd &
dunst &
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

while true; do
	exec i3
done
