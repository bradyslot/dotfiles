#!/bin/sh

fc-cache -f &
xsettingsd &
xrandr -r 75 &
clipmenud &
uncluttler -idle 0 &
xcalib ~/.config/xcalib/q3279vwf.icm &
xset s off -dpms 2> /dev/null &
xset r rate 350 40 &
xmodmap -e 'clear Lock' -e 'keycode 0x42 = Escape' &
numlockx &
xrdb ~/.config/X11/Xresources &
feh --no-fehbg --bg-fill ~/Pictures/fluffy-galaxy-wallpaper.png &
# dwmblocks &
picom -f -D 5 -i 1.0 -c &
sxhkd &
dunst &
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

while true; do
	exec i3
done
