# media controls
alt + equal
	pulsemixer --change-volume +5

alt + minus
	pulsemixer --change-volume -5

alt + period
	playerctl next

alt + comma
	playerctl previous

alt + slash
	playerctl play-pause

# system shortcuts
Print
	scrot Pictures/scrot/screenshot-$(date '+%F-%H-%M-%S').png

alt + shift + x
	pkill sxhkd && $(sxhkd &)

XF86MonBrightnessUp
	xbacklight -inc 10

XF86MonBrightnessDown
	xbacklight -dec 10
