# media controls
alt + equal
	pulsemixer --change-volume +5

alt + minus
	pulsemixer --change-volume -5

alt + period
	playerctl next

alt + comma
	playerctl previous
	
alt + slash
	playerctl play-pause

# system shortcuts
Print
	scrot Pictures/scrot/screenshot-$(date '+%F-%H-%M-%S').png

alt + Print
	scrot -s Pictures/scrot/screengrab-$(date '+%F-%H-%M-%S').png

alt + Escape
	prompt 'Leave Xorg?' 'killall Xorg'

alt + Delete
	prompt "Shutdown computer?" "sudo -A shutdown -h now"

alt + BackSpace
	prompt "Reboot computer?" "sudo -A reboot"

alt + backslash
	clipmenu 

alt + shift + x
	killandnotify "sxhkd" "Config reloaded" && sxhkd &
