# move window
cmd + ctrl + shift - h : yabai -m window --warp west
cmd + ctrl + shift - l : yabai -m window --warp east
cmd + ctrl + shift - j : yabai -m window --warp south
cmd + ctrl + shift - k : yabai -m window --warp north

# resize windows
cmd + shift - h : yabai -m window west --resize right:-50:0 2> /dev/null  || yabai -m window --resize right:-50:0
cmd + shift - l : yabai -m window east --resize left:50:0 2> /dev/null    || yabai -m window --resize left:50:0
cmd + shift - k : yabai -m window south --resize top:0:-50 2> /dev/null   || yabai -m window --resize top:0:-50
cmd + shift - j : yabai -m window north --resize bottom:0:50 2> /dev/null || yabai -m window --resize bottom:0:50

# set current window as a stack
# cmd + ctrl - j : yabai -m window --stack south
# cmd + ctrl - k : yabai -m window --stack north
# cmd + ctrl - h : yabai -m window --stack west
# cmd + ctrl - l : yabai -m window --stack east

# set new window direction
# 0x1B = minus, 0x2A = backslash
cmd + shift - 0x1B : yabai -m window --insert south
cmd + ctrl  - 0x1B : yabai -m window --insert north
cmd + shift - 0x2A : yabai -m window --insert east
cmd + ctrl  - 0x2A : yabai -m window --insert west

# toggle float
cmd + ctrl - space : yabai -m window --toggle float

# fullscreen focused window
cmd + shift - f : yabai -m window --toggle zoom-fullscreen

# native fullscreen focused window
cmd + ctrl + shift - f : yabai -m window --toggle native-fullscreen

