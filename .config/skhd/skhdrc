# open terminal
cmd - return : open -n -a "Alacritty.app"

# open application menu
cmd - d : Alacritty -o font.size=16 -e bash -c ~/bin/menu.sh

# focus window
cmd - h : yabai -m window --focus west
cmd - l : yabai -m window --focus east
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north

# move window
cmd + shift - h : yabai -m window --warp west
cmd + shift - l : yabai -m window --warp east
cmd + shift - j : yabai -m window --warp south
cmd + shift - k : yabai -m window --warp north

# move window to space
cmd + shift - 1 : yabai -m window --space 1
cmd + shift - 2 : yabai -m window --space 2
cmd + shift - 3 : yabai -m window --space 3
cmd + shift - 4 : yabai -m window --space 4
cmd + shift - 5 : yabai -m window --space 5
cmd + shift - 6 : yabai -m window --space 6
cmd + shift - 7 : yabai -m window --space 7
cmd + shift - 8 : yabai -m window --space 8
cmd + shift - 9 : yabai -m window --space 9
cmd + shift - 0 : yabai -m window --space 10 

# resize windows
cmd + ctrl + shift - h : yabai -m window west --resize right:-50:0 2> /dev/null  || yabai -m window --resize right:-50:0
cmd + ctrl + shift - l : yabai -m window east --resize left:50:0 2> /dev/null    || yabai -m window --resize left:50:0
cmd + ctrl + shift - k : yabai -m window south --resize top:0:-50 2> /dev/null   || yabai -m window --resize top:0:-50
cmd + ctrl + shift - j : yabai -m window north --resize bottom:0:50 2> /dev/null || yabai -m window --resize bottom:0:50

# set new window direction
# 0x1B = minus, 0x2A = backslash
cmd + shift - 0x1B : yabai -m window --insert south
cmd + shift - 0x2A : yabai -m window --insert east

# toggle float
cmd + shift - return : yabai -m window --toggle float

# toggle native fullscreen
cmd + shift - f : yabai -m window --toggle native-fullscreen

